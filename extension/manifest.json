{
    "manifest_version": 3,
    "name": "YouTube AI Navigator",
    "version": "2.0.0",
    "description": "AI-powered YouTube insights with smart segmentation",
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "permissions": [
        "storage",
        "cookies"
    ],
    "host_permissions": [
        "*://*.youtube.com/*",
        "https://generativelanguage.googleapis.com/*",
        "https://*.invidious.io/*",
        "*://*/*"
    ],
    "background": {
        "service_worker": "background/sw.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content/inject.js"
            ],
            "run_at": "document_start"
        },
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content/main.js"
            ],
            "css": [
                "content/content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "options_page": "options/opts.html",
    "web_accessible_resources": [
        {
            "resources": [
                "content/*.js",
                "content/**/*.js",
                "services/*.js",
                "services/**/*.js",
                "lib/*.js",
                "api/*.js",
                "sidepanel/*.html",
                "sidepanel/*.css",
                "sidepanel/*.js",
                "onboarding/*.html",
                "onboarding/*.css",
                "onboarding/*.js",
                "assets/*",
                "utils/*.js"
            ],
            "matches": [
                "*://*.youtube.com/*"
            ]
        }
    ]
}