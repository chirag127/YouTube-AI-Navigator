{
  "manifest_version": 3,
  "name": "YouTube AI Navigator",
  "version": "2.0.0",
  "description": "AI-powered YouTube insights with smart segmentation",
  "icons": {
    "16": "assets/icon16.svg",
    "48": "assets/icon48.svg",
    "128": "assets/icon128.svg"
  },
  "permissions": [
    "storage",
    "cookies"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background/sw.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content/main.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon16.svg",
      "48": "assets/icon48.svg",
      "128": "assets/icon128.svg"
    }
  },
  "options_page": "options/opts.html",
  "web_accessible_resources": [
    {
      "resources": [
        "content/*.js",
        "content/**/*.js",
        "services/*.js",
        "services/**/*.js",
        "lib/*.js",
        "api/*.js",
        "sidepanel/*.html",
        "sidepanel/*.css",
        "sidepanel/*.js",
        "onboarding/*.html",
        "onboarding/*.css",
        "onboarding/*.js",
        "assets/*",
        "utils/*.js",
        "utils/**/*.js"
      ],
      "matches": [
        "*://*.youtube.com/*"
      ]
    }
  ]
}